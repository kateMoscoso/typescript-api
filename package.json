{
  "name": "typescript-api",
  "version": "1.0.0",
  "description": "type script base api",
  "main": "index.js",
  "scripts": {
    "start": "tsc && node dist/index.js",
    "start:dev": "ts-node src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:features": "npm run test:mooc:backend:features",
    "lint": "eslint --ignore-path .eslintignore --ext .js,.ts",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\""
  },
  "keywords": [
    "typyscript"
  ],
  "author": "Kate Moscoso",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "express": "^4.18.2",
    "glob": "^10.3.10",
    "helmet": "^7.1.0",
    "http-status": "^1.7.3",
    "joi": "^17.11.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.3.1",
    "@types/cors": "^2.8.17",
    "@types/cucumber": "^7.0.0",
    "@types/express": "^4.17.21",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.11",
    "@types/morgan": "^1.9.9",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
